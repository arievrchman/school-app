<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
  <title>Teachers</title>
</head>

<body>

  <% include ../partials/navbar %>

  <div style="text-align: center">
    <h4>All Teachers Data</h4>
    <a href="/teachers/add" class="waves-effect waves-light btn">Add Teachers Data</a>
  </div>

  <table class="centered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Options</th>
      </tr>
    </thead>
    <% teachers.forEach(data => { %>
    <tbody>
      <tr>
        <td>
          <%= data.id %>
        </td>
        <td>
          <%= data.first_name %>
        </td>
        <td>
          <%= data.last_name %>
        </td>
        <td>
          <%= data.email %>
        </td>
        <td>
          <%= data.Subject ? data.Subject.subject_name : 'unassigned' %>
        </td>
        <td style="margin-right: 50px">
          <a href="/teachers/edit/<%= data.id %>">Edit</a> | <a href="/teachers/delete/<%= data.id %>" onclick="return confirm('Delete this data?') ">Delete</a>
        </td>
      </tr>
    </tbody>
    <% }); %>
  </table>

</body>

</html>