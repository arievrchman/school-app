<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
  <title>Students</title>
  <style>
    .tform {
      margin: 0 auto;
      width: 580px;
      padding-top: 25px
    }
    .cen-text {
      text-align: center
    }

    .sub-form{
      margin: 0 auto;
      width: 340px;
    }
    .sub-form .btn {
      margin-top: 10px;
      margin-left: 100px;
    }
  </style>
</head>

<body>

  <% include ../partials/navbar %>

  <div style="text-align: center">
    <h4>Add Subject to Student</h4>
  </div>

  <div class="tform">
    <table class="highlight centered">
      <tr>
        <td><b>First Name</b></td>
        <td>
          <%= dataStudent.first_name %>
        </td>
      </tr>
      <tr>
        <td><b>Last Name</b></td>
        <td>
          <%= dataStudent.last_name %>
        </td>
      </tr>
      <tr>
        <td><b>Email</b></td>
        <td>
          <%= dataStudent.email %>
        </td>
      </tr>
    </table>
  </div>

  <div class="sub-form">
    <form style="padding-top: 50px" action="/students/<%= dataStudent.id %>/add-subject" method="post">
      <select name="subject_id">
        <option value="" disabled selected>Choose Subjects</option>
        <% subjects.forEach(subject => { %>
        <option value="<%= subject.id %> ">
          <%= subject.subject_name %>
        </option>
        <% }) %>
      </select>
      <button class="btn waves-effect waves-light" type="submit" name="action">Add Subject</button>
    </form>
  </div>

  <script>
    $(document).ready(function () {
      $('select').formSelect();
    });
  </script>
</body>

</html>